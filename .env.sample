# Local dev environment sample
# Copy to .env and fill in values for local development

# DB (optional - used by Drizzle against a Postgres DB; Supabase Postgres recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/deshawn

# Session secret
SESSION_SECRET=dev-session-secret

# Supabase (optional; required for ReusableAPI full features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service_role_key_here
# Optional client anon key (for client-side interactions)
VITE_SUPABASE_ANON_KEY=anon_key_here
VITE_SUPABASE_URL=https://your-project.supabase.co

# Stripe (optional; required for payment flows)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Admin settings fallback (JSON) - used when Supabase not configured
# ADMIN_SETTINGS_JSON={"stripeConfig": { "publishableKey": "pk_test_xxx", "secretKey": "sk_test_xxx", "mode": "test" }}

# Origin for absolute URLs used by Stripe
SITE_ORIGIN=http://localhost:5000

# CORS
CORS_ORIGIN=http://localhost:3000
